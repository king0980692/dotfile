
# Create a new desktop and move current window to it
cmd+alt - n : yabai -m space --create && \
        index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
        yabai -m space --focus "${index}"
        # yabai -m window --space "${index}" && \
cmd+alt - x : ~/.config/skhd/space_destroy.sh


ctrl + alt - 0x27 : ~/.config/skhd/space_focus_next.sh
ctrl + alt - h : ~/.config/skhd/space_focus_prev.sh

fn - 0x21 : ~/.config/skhd/space_focus_prev.sh # fn + [
fn - 0x1E : ~/.config/skhd/space_focus_next.sh # fn + ]
fn - 0x2A: skhd -k "ctrl - tab"
fn - 0x23: skhd -k "ctrl - p" # fn+p : ctrl+p
fn - 0x2D: skhd -k "ctrl - n" # fn+n : ctrl+n
fn - 0x2F: skhd -k "ctrl - l" # fn+n : ctrl+n
alt - f3: ~/.config/script/toggle_theme.sh
alt - f2: source ~/.config/test.sh




# ctrl - j : skhd -k "down"
# ctrl - k : skhd -k "up"

# focus space
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7

# focus window
cmd + alt - h : yabai -m window --focus west
cmd + alt - l : yabai -m window --focus east
cmd + alt - j : yabai -m window --focus south
cmd + alt - k : yabai -m window --focus north

# cmd - h :yabai -m window --minimize
# cmd - m :yabai -m window --minimize
# cmd - h :yabai -m window --maximize




# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north

# balance size of windows
shift + alt - 0 : yabai -m space --balance

